<%= form_for @memo do |f| %>
	Memo Title:
	<%= f.text_field :title %>
	<br>
	Short Description of Memo:
	<%= f.text_field :subject %>
	<br>
	Date Created:
	<%= f.date_select :created %>
	<br>
	Due Date:
	<%= f.date_select :due %>
	<br>
	Content:
	<%= f.text_field :content %>
	<br>
	Image uploaded:
	<%= image_tag(@memo.image_url) if @memo.image? %>
    	<%= f.file_field :image %>
	<br>	
	<%= f.check_box :remove_image %>
     	Remove image
	<br>
	<br>
	<%= f.submit "Save" %>
	
<% end %>
